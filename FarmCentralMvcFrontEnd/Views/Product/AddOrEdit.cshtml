@model FarmCentralMvcFrontEnd.Models.MvcProductModel
@{
    ViewData["Title"] = "AddOrEdit";
}

<h1>AddOrEdit</h1>

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.Id) //Hide User ID

        <div class="form-group">
            @Html.LabelFor(model => model.ProductName)
            @Html.EditorFor(model => model.ProductName)
            @Html.ValidationMessageFor(model => model.ProductName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateAdded)
            @Html.EditorFor(model => model.DateAdded)
            @Html.ValidationMessageFor(model => model.DateAdded)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductTypeId)
            @Html.EditorFor(model => model.ProductTypeId)
            @Html.ValidationMessageFor(model => model.ProductTypeId)
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn button"/>
            <input type="reset" value="Back" class="btn button"/>
        </div>
    }
</div>